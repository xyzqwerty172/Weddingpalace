generator client {
  provider = "prisma-client-js"
}

// schema.prisma

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  username      String   @default(cuid()) @id
  password      String
  role          Int
}

model Blog{
  id             Int    @id @default(autoincrement())
  title          String
  subtitle       String? @db.Text
  body           String? @db.Text
  thumbnail_url  String @db.Text
  is_published   Int
  createdDate    DateTime
  type           Int @default(0)
}

model Banner{
  id             Int    @id @default(autoincrement())
  url          String
}