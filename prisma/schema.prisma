generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username String @id @default(cuid())
  password String
  role     Int
}

model Blog {
  id            Int      @id @default(autoincrement())
  title         String
  subtitle      String?
  body          String?
  thumbnail_url String
  is_published  Int
  createdDate   DateTime
  type          Int      @default(0)
}

model Banner {
  id  Int    @id @default(autoincrement())
  url String
}
